{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Sikontrol",
    "version": "2.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "Sikontrol",
        "width": 1280,
        "height": 800,
        "resizable": false,
        "visible": false,
        "center": true
      },
      {
        "width": 300,
        "height": 350,
        "decorations": false,
        "url": "/splashscreen.html",
        "label": "splashscreen",
        "center": true,
        "transparent": true,
        "resizable": false,
        "title": "Sikontrol Launch"
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "wtf.sikelio.sikontrol",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "publisher": "Sikelio"
    }
  }
}
